{
 "name": "scenario-toolkit",
 "displayName": "Scenario Toolkit",
 "publisher": "francisco-santos",
 "version": "0.0.3",
 "engines": {
  "vscode": "^1.85.0"
 },
 "main": "./out/extension.js",
 "activationEvents": [
  "*"
 ],
 "contributes": {
  "configuration": {
   "properties": {
    "scenarioToolkit.basePath": {
     "type": "string",
     "default": "",
     "description": "Root containing src and scenarios"
    },
    "scenarioToolkit.pythonCommand": {
     "type": "string",
     "default": "python",
     "description": "Python command used to run scenarios (example: python, py, python3)"
    },
    "scenarioToolkit.runCommandTemplate": {
     "type": "string",
     "default": "run.py <scenario_name>",
     "description": "Python command template args (without python executable). Must include <scenario_name>, e.g. main.py <scenario_name>"
    }
   }
  },
  "viewsContainers": {
   "activitybar": [
    {
     "id": "toolkit",
     "title": "Toolkit",
     "icon": "resources/icon.svg"
    }
   ]
  },
  "views": {
   "toolkit": [
    {
     "id": "devArea",
     "name": "Development Area",
     "collapsed": true
    },
    {
     "id": "srcExplorer",
     "name": "Source Explorer"
    },
    {
     "id": "scenarioExplorer",
     "name": "Scenarios"
    },
    {
     "id": "configInspector",
     "name": "Config Inspector",
     "type": "webview"
    }
   ]
  },
  "commands": [
   {
    "command": "filesystem.copy",
    "title": "Copy",
    "icon": "$(copy)"
   },
   {
    "command": "filesystem.paste",
    "title": "Paste",
    "icon": "$(clippy)"
   },
   {
    "command": "filesystem.delete",
    "title": "Delete",
    "icon": "$(trash)"
   },
   {
    "command": "filesystem.copyPath",
    "title": "Copy Path",
    "icon": "$(link)"
   },
   {
    "command": "scenario.run",
    "title": "Run",
    "icon": "$(play)"
   },
   {
    "command": "scenario.runDebug",
    "title": "Run with Debugger",
    "icon": "$(debug-alt)"
   },
   {
    "command": "scenario.toggleSudoExecution",
    "title": "Toggle sudo execution",
    "icon": "$(shield)"
   },
   {
    "command": "scenario.setGlobalRunFlags",
    "title": "Set Global Run Flags",
    "icon": "$(terminal-cmd)"
   },
   {
    "command": "scenario.runScreen",
    "title": "Run in detached screen",
    "icon": "$(terminal)"
   },
   {
    "command": "scenario.dup",
    "title": "Duplicate",
    "icon": "$(copy)"
   },
   {
    "command": "scenario.rename",
    "title": "Rename",
    "icon": "$(edit)"
   },
   {
    "command": "scenario.del",
    "title": "Delete",
    "icon": "$(trash)"
   },
   {
    "command": "run.rename",
    "title": "Rename",
    "icon": "$(edit)"
   },
   {
    "command": "run.del",
    "title": "Delete",
    "icon": "$(trash)"
   },
   {
    "command": "run.analyze",
    "title": "Analyze",
    "icon": "$(graph-line)"
   },
   {
    "command": "run.openLog",
    "title": "Open Log",
    "icon": "$(output)"
   },
   {
    "command": "run.tags",
    "title": "Set Run Tags",
    "icon": "$(tag)"
   },
   {
    "command": "run.clearTags",
    "title": "Clear Run Tags",
    "icon": "$(clear-all)"
   },
   {
    "command": "run.applySuccessTag",
    "title": "Tag as success",
    "icon": "$(check)"
   },
   {
    "command": "run.applyFailedTag",
    "title": "Tag as failed",
    "icon": "$(error)"
   },
   {
    "command": "tags.manage",
    "title": "Manage Tags",
    "icon": "$(tag)"
   },
   {
    "command": "tags.create",
    "title": "Create Tag",
    "icon": "$(add)"
   },
   {
    "command": "tags.edit",
    "title": "Edit Tag",
    "icon": "$(edit)"
   },
   {
    "command": "tags.delete",
    "title": "Delete Tag",
    "icon": "$(trash)"
   },
   {
    "command": "run.filterByTag",
    "title": "Filter Runs By Tag",
    "icon": "$(filter)"
   },
   {
    "command": "scenario.pin",
    "title": "Pin/Unpin",
    "icon": "$(pin)"
   },
   {
    "command": "scenario.filter",
    "title": "Filter",
    "icon": "$(filter)"
   },
   {
    "command": "scenario.toggleSort",
    "title": "Toggle Scenario Sort",
    "icon": "$(list-ordered)"
   },
   {
    "command": "scenario.toggleRunSort",
    "title": "Toggle Run Sort",
    "icon": "$(history)"
   },
   {
    "command": "scenario.openConfigInspector",
    "title": "Open Config Inspector",
    "icon": "$(symbol-property)"
   },
   {
    "command": "scenario.refresh",
    "title": "Refresh Toolkit",
    "icon": "$(refresh)"
   },
   {
    "command": "scenario.toggleDev",
    "title": "ToggleDev",
    "icon": "$(plus)"
   },
   {
    "command": "workspace.save",
    "title": "Save Workspace",
    "icon": "$(save)"
   },
   {
    "command": "workspace.load",
    "title": "Load Workspace",
    "icon": "$(folder-opened)"
   },
   {
    "command": "workspace.reset",
    "title": "Reset Workspace",
    "icon": "$(discard)"
   },
   {
    "command": "dev.clear",
    "title": "Clear Development Area",
    "icon": "$(clear-all)"
   },
   {
    "command": "dev.remove",
    "title": "Remove From Development Area",
    "icon": "$(close)"
   }
  ],
  "menus": {
   "view/title": [
    {
     "command": "scenario.filter",
     "when": "view==scenarioExplorer",
     "group": "navigation"
    },
    {
     "command": "scenario.toggleSort",
     "when": "view==scenarioExplorer",
     "group": "navigation"
    },
    {
     "command": "scenario.setGlobalRunFlags",
     "when": "view==scenarioExplorer",
     "group": "navigation"
    },
    {
     "command": "tags.manage",
     "when": "view==scenarioExplorer",
     "group": "navigation"
    },
    {
     "command": "dev.clear",
     "when": "view==devArea",
     "group": "navigation"
    }
   ],
   "view/item/context": [
    {
     "command": "scenario.dup",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "inline@3"
    },
    {
     "command": "scenario.pin",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "inline@5"
    },
    {
     "command": "scenario.run",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "inline@6"
    },
    {
     "command": "scenario.toggleSudoExecution",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "inline@7"
    },
    {
     "command": "scenario.del",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "edit@1"
    },
    {
     "command": "scenario.rename",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "edit@2"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "edit@3"
    },
    {
     "command": "scenario.dup",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "core@1"
    },
    {
     "command": "scenario.pin",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "core@2"
    },
    {
     "command": "scenario.run",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "run@1"
    },
    {
     "command": "scenario.runDebug",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "run@2"
    },
    {
     "command": "scenario.runScreen",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "run@3"
    },
    {
     "command": "scenario.toggleSudoExecution",
     "when": "view==scenarioExplorer && viewItem==scenario",
     "group": "run@9"
    },
    {
     "command": "run.openLog",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "inline@3"
    },
    {
     "command": "run.analyze",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "inline@4"
    },
    {
     "command": "run.tags",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "inline@5"
    },
    {
     "command": "scenario.pin",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "inline@6"
    },
    {
     "command": "run.del",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "edit@1"
    },
    {
     "command": "run.rename",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "edit@2"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "edit@3"
    },
    {
     "command": "run.openLog",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "core@1"
    },
    {
     "command": "run.analyze",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "core@2"
    },
    {
     "command": "scenario.pin",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "core@3"
    },
    {
     "command": "run.tags",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "tags@1"
    },
    {
     "command": "run.applySuccessTag",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "tags@1"
    },
    {
     "command": "run.applyFailedTag",
     "when": "view==scenarioExplorer && viewItem==ioRun",
     "group": "tags@2"
    },
    {
     "command": "run.filterByTag",
     "when": "view==scenarioExplorer && viewItem==ioFolder",
     "group": "inline"
    },
    {
     "command": "scenario.toggleRunSort",
     "when": "view==scenarioExplorer && viewItem==ioFolder",
     "group": "inline"
    },
    {
     "command": "scenario.openConfigInspector",
     "when": "view==scenarioExplorer && viewItem==configsFolder",
     "group": "inline"
    },
    {
     "command": "run.filterByTag",
     "when": "view==scenarioExplorer && viewItem==ioFolder",
     "group": "run@1"
    },
    {
     "command": "scenario.toggleRunSort",
     "when": "view==scenarioExplorer && viewItem==ioFolder",
     "group": "run@2"
    },
    {
     "command": "scenario.openConfigInspector",
     "when": "view==scenarioExplorer && viewItem==configsFolder",
     "group": "run@1"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==scenarioExplorer && viewItem==ioFolder",
     "group": "actions@1"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==scenarioExplorer && viewItem==configsFolder",
     "group": "actions@1"
    },
    {
     "command": "filesystem.copy",
     "when": "view==srcExplorer && (viewItem==srcFile || viewItem==srcFolder)",
     "group": "actions@1"
    },
    {
     "command": "filesystem.paste",
     "when": "view==srcExplorer && (viewItem==srcFile || viewItem==srcFolder)",
     "group": "actions@2"
    },
    {
     "command": "filesystem.delete",
     "when": "view==srcExplorer && (viewItem==srcFile || viewItem==srcFolder)",
     "group": "actions@3"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==srcExplorer && (viewItem==srcFile || viewItem==srcFolder)",
     "group": "actions@4"
    },
    {
     "command": "scenario.toggleDev",
     "when": "view==srcExplorer && viewItem==srcFile",
     "group": "inline"
    },
    {
     "command": "scenario.toggleDev",
     "when": "view==srcExplorer && viewItem==srcFile",
     "group": "dev@1"
    },
    {
     "command": "dev.remove",
     "when": "view==devArea && viewItem==devFile",
     "group": "inline"
    },
    {
     "command": "dev.remove",
     "when": "view==devArea && viewItem==devFile",
     "group": "dev@1"
    },
    {
     "command": "filesystem.copy",
     "when": "view==devArea && viewItem==devFile",
     "group": "actions@2"
    },
    {
     "command": "filesystem.paste",
     "when": "view==devArea && viewItem==devFile",
     "group": "actions@3"
    },
    {
     "command": "filesystem.delete",
     "when": "view==devArea && viewItem==devFile",
     "group": "actions@4"
    },
    {
     "command": "filesystem.copyPath",
     "when": "view==devArea && viewItem==devFile",
     "group": "actions@5"
    }
   ],
   "commandPalette": [
    {
     "command": "workspace.save",
     "when": "true"
    },
    {
     "command": "workspace.load",
     "when": "true"
    },
    {
     "command": "scenario.refresh",
     "when": "true"
    },
    {
     "command": "workspace.reset",
     "when": "true"
    }
   ]
  },
  "configurationDefaults": {
   "workbench.list.showActionsOnHover": false
  }
 },
 "scripts": {
  "compile": "tsc -p ./"
 },
 "dependencies": {
  "@vscode/codicons": "^0.0.36",
  "fast-xml-parser": "^4.5.0"
 },
 "devDependencies": {
  "@types/mocha": "^10.0.10",
  "@types/node": "^18",
  "@types/vscode": "^1.85.0",
  "@vscode/vsce": "^3.7.1",
  "typescript": "^5"
 }
}
